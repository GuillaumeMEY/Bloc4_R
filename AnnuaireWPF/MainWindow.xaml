<Window xmlns:Salaries="clr-namespace:AnnuaireWPF.Views.Salaries"  xmlns:shared="clr-namespace:AnnuaireWPF.shared"  x:Class="AnnuaireWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <shared:NavBar />

        <ContentControl Content="{Binding UserControl}" Grid.Row="1">
        </ContentControl>
        
    </Grid>
</Window>
